@model MemberManagement.ViewModels.UserViewModels.UserVM

@{
    ViewData["Title"] = "Profile";
}

<div class="container-fluid">
    <h1 class="mt-4">Thông tin</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Thông tin cá nhân</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        Tên đăng nhập
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserName)
                    </dd>
                    <dt class="col-sm-2">
                        Email
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        Số điện thoại
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>
                    <dt class="col-sm-2">
                        Chức vụ
                    </dt>
                    <dd class="col-sm-10">
                        @for (int i=0;i< Model.Roles.Count;i++)
                        {
                            @Html.DisplayFor(item => item.Roles[i]);
                            <br />
                        }
                    </dd>
                </dl>
            </div>
        </div>
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Users">Về danh sách</a>
        </div>
    </div>
</div>