@using MemberManagement.ViewModels.Common;
@model PagedResult<MemberManagement.ViewModels.ImageViewModels.ImageVM>

@{
    ViewData["Title"] = "Index";
}

<h1>DANH SÁCH HÌNH ẢNH</h1>

<p>
    <a class="btn btn-success" asp-action="Create" asp-controller="Image">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Đường dẫn hình ảnh
            </th>
            <th>
                Ngày tạo
            </th>
            <th>
                Kích cỡ
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileSize)
                </td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
