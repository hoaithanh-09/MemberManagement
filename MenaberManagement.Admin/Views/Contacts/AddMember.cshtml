@model MemberManagement.ViewModels.ContractMemberViewModels.ContactMemberCreateRequest

@{
    ViewData["Title"] = "AddMember";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Thêm mới</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddMember">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label"> Thành viên</label>
                    @Html.DropDownListFor(model => model.MemberId, new SelectList(Model.Members, "Id", "Name"), new { @class = "form-control" })
                    <span asp-validation-for="MemberId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Chức vụ</label>
                    @Html.DropDownListFor(model => model.RoleId, new SelectList(Model.Roles, "Id", "Name"), new { @class = "form-control" })
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

