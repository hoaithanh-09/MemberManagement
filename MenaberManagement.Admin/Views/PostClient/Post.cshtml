@using MemberManagement.ViewModels.Common
@model PagedResult<MemberManagement.ViewModels.PostViewModels.PostVM>


@{
    ViewData["Title"] = "sdasd";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="card mb-12">
    <div class="table-responsive">
        @if  (!@String.IsNullOrEmpty(@User.Identity.Name))
        {
           
            <div class="col-md-5 col-xs-12">
                <a class="btn btn-success" asp-action="Create" asp-controller="Post">Tạo mới</a>
            </div>
        }
        <div style="margin-left:60px;">
             <b><h1 style="text-align:center;margin-bottom:40px; margin-top:50px; color: #008B8B;">DANH MỤC BÀI VIẾT</h1></b>
            <table id="ContentPlaceHolder1_d_group" cellspacing="0" style="width:500px;border-collapse:collapse;">
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            <table border="0" cellpadding="0" cellspacing="0" style="width: 500px">

                                <tr>
                                    <td class="hinh_h">
                                        <a href='detail.aspx?id=05/08/2021 07/02/18'>
                                            <img id="ContentPlaceHolder1_d_group_Image1_0" src="@item.PathFile" style="border-width:0px;object-fit: cover;width:120px; height:150px;margin-right:20px;text-align:left;" />
                                        </a>
                                    </td>
                                    <td style="width: 20px">
                                    </td>
                                    <td style="width: 340px" valign="top">
                                        <table border="0" cellpadding="0" cellspacing="0" style="width: 850px">
                                            <tr>
                                                <td style="height: 90px; font-size:19px; " valign="top">
                                                  @Html.ActionLink(item.Title, "Details","Post", new { id = item.Id },new { @class = "title-post"})
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="height: 20px">
                                                    <div class="date">
                                                        Cập nhật:
                                                        <span id="ContentPlaceHolder1_d_group_Label2_0">@item.CreatedDate</span>
                                                    </div>
                                                      @*  <div class="xem_tiep">
                                                        <a href='detail.aspx?id=05/08/2021 07/02/18'>Xem tiếp...</a>
                                                            </div>*@
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3" style="height: 20px">
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3" style="height: 20px; border-top:solid 1px #dadada;">
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                }
                </table>
        </div>

    </div>
    @await Component.InvokeAsync("Pager", Model)
</div>

